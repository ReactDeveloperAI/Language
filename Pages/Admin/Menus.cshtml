@page
@model MultilingualMenuApp.Pages.Admin.MenusModel
@{
    ViewData["Title"] = "Manage Menus";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <p>Manage menu items and their translations.</p>

    <div class="row mb-3">
        <div class="col">
            <a asp-page="./MenuEdit" class="btn btn-primary">Add New Menu Item</a>
            <a asp-page="/Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>

    @if (Model.Menus.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Default Name</th>
                    <th>Default Description</th>
                    <th>Translations</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in Model.Menus)
                {
                    <tr>
                        <td>@menu.DefaultName</td>
                        <td>@(menu.DefaultDescription.Length > 50 ? menu.DefaultDescription.Substring(0, 50) + "..." : menu.DefaultDescription)</td>
                        <td>
                            @if (menu.Translations.Any())
                            {
                                <span class="badge bg-info">@menu.Translations.Count translation(s)</span>
                                <small class="text-muted">(@string.Join(", ", menu.Translations.Select(t => t.Language)))</small>
                            }
                            else
                            {
                                <span class="badge bg-warning">No translations</span>
                            }
                        </td>
                        <td>
                            <a asp-page="./MenuEdit" asp-route-id="@menu.Id" class="btn btn-sm btn-warning">Edit</a>
                            <form method="post" style="display:inline;" asp-page-handler="Delete" asp-route-id="@menu.Id">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this menu item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No menu items found. Add your first menu item!</div>
    }
</div>
